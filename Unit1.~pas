unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, ExtCtrls, StdCtrls, StrUtils;

type
  TfrmMain = class(TForm)
    txtMemo: TMemo;
    GroupBox1: TGroupBox;
    edtPrefix: TEdit;
    btnPrefix: TButton;
    edtPostfix: TEdit;
    btnPostfix: TButton;
    btnMergeLines: TButton;
    btnExchangeEqual: TButton;
    procedure btnMergeLinesClick(Sender: TObject);
    procedure btnPrefixClick(Sender: TObject);
    procedure btnPostfixClick(Sender: TObject);
    procedure btnExchangeEqualClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmMain: TfrmMain;

implementation

{$R *.dfm}

procedure TfrmMain.btnMergeLinesClick(Sender: TObject);
begin
    with txtMemo.Lines do begin
        Text:=StringReplace(Text,#13#10,'',[rfReplaceAll]);
    end;
end;

procedure TfrmMain.btnPrefixClick(Sender: TObject);
var
    i:integer;
begin
    for i:=0 to txtMemo.Lines.Count-1 do begin
        with txtMemo.Lines do begin
            Strings[i]:=edtPrefix.Text + Strings[i];
        end;
    end;
end;

procedure TfrmMain.btnPostfixClick(Sender: TObject);
var
    i:integer;
begin
    for i:=0 to txtMemo.Lines.Count-1 do begin
        with txtMemo.Lines do begin
            Strings[i]:=Strings[i] + edtPostfix.Text;
        end;
    end;
end;

procedure TfrmMain.btnExchangeEqualClick(Sender: TObject);
var
    i:integer;
    str1,str2:string;
    equalpos:integer;
    tempstr:WideString;
begin
    for i:=0 to txtMemo.Lines.Count-1 do begin
        tempstr:=txtMemo.Lines.Strings[i];
        equalpos:=pos('=',tempstr);
        if equalpos>0 then begin
            str1:=LeftStr(tempstr,equalpos-1);
            str2:=RightStr(tempstr,length(tempstr)-equalpos);
            txtMemo.Lines.Strings[i]:=str2 + '=' + str1;
        end;
    end;
end;

end.
